<div>
	<h2>Crear Pop Question</h2>

	<%= form_for(:pop_question, :url => {:action => 'create'}) do |f| %>
		<table>
		<tr>
			<th>Pregunta</th>
			<td><%= f.text_field(:question) %></td>
		</tr>
		<tr>
			<th>Respuesta</th>
			<td><%= f.text_field(:answer) %></td>
		</tr>
	</table>
	<div>
		<%= submit_tag("Crear Pop Questin") %>
	</div>
	<% end %>
</div>